<h2>Create a new celebrity</h2>

{{#if errorMessage}}
    <div>
        {{errorMessage}}
    </div>
{{/if}}

<div>
    <form action="/celebrities/create" method="POST">

        <label>Name
            <input type="text" required="true" name="name" placeholder="Celine Dion">
        </label>

        <label>Occupation
            <input type="text" required="true" name="occupation" placeholder="singer">
        </label>

         <label>Catchphrase
            <input type="text" required="true" name="catchphrase" placeholder="I don't have a catchphrase">
        </label>

        <button type="submit">Submit</button>

    </form>
</div>
