<h2>Edit your movie!</h2>

<form action="/movies/{{movie._id}}" method="POST">
    <label>Title:
        <input type="text" name="title" value="{{movie.title}}">
    </label>
    <label>Genre:
        <input type="text" name="genre" value="{{movie.genre}}">
    </label>
    <label>Plot:
        <input type="text" name="plot" value="{{movie.plot}}">
    </label>
    <label>Cast:
        <select name="cast" value="{{celebrity.names}}" multiple>
            <option value="{{this.name}}"></option>
        </select>
    </label>
    <button type="submit">Save</button>
</form>

